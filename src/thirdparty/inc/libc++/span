#pragma once

#include "prolog.h"

#if defined(_MSC_VER)
#   include "../_impl/gsl/span"
#else
#   include SB_SRC_STD_INC(span)
#endif

SB_STD_NS_BEGIN

#if defined(_MSC_VER)
    template <class ElementType, std::ptrdiff_t Extent = ::gsl::dynamic_extent>
    using span = ::gsl::span<ElementType, Extent>;
#else
    SB_STD_USE(span);
#endif

SB_STD_NS_END
